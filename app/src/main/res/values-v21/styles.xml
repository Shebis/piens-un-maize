<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         Theme.AppCompat.Light.DarkActionBar
         android:textSize="32sp"
         sans-serif-thin
         -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:switchTextAppearance">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

<!-- BUTTONS-->
    <style name="myButtonStyle" parent="android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

<!--VIRSRAKSTI-->
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textAlignment">center</item>
    </style>
<!--TABULAS TEKSTI
textStart/viewStart-->
    <style name="myWeeText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorSlightlyTransparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--SELECT PRODUCT/STORE VIRSRAKSTI-->
    <style name="myExtraWeeText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorSlightlyTransparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">5dp</item>
    </style>

<!--LISTVIEWS-->
    <style name="myListViews" parent="android:style/Widget.ListView">
        <item name="background">@color/colorAccent</item>
        <item name="android:divider">@color/windowBackground</item>
        <item name="android:dividerHeight">7dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--EDIT TEXT-->
    <style name="myForms" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColorSlightlyTransparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!--SWITCHES
    <style name="myForms" parent="android:Sw">
        <item name="android:textColor">@color/textColorSlightlyTransparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">10dp</item>
    </style>
-->


</resources>
