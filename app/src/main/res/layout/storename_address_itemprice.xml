<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rock.werool.piensunmaize.search.by_product.SearchByProductActivity">

    <TextView
        android:id="@+id/storeName"
        android:inputType="textFilter|textMultiLine|textNoSuggestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/textColorDark"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toLeftOf="@+id/spaceBetweenTextBoxes"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.49" />

    <TextView
        android:id="@+id/storeAddress"
        android:inputType="textFilter|textMultiLine|textNoSuggestions"
        android:textColor="@color/textColorSlightlyTransparent"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/storeName"
        app:layout_constraintRight_toLeftOf="@+id/selectedProductPriceInStore"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/selectedProductPriceInStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/selectStoreToList"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/selectStoreToList"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/selectStoreToList"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.611" />

    <Space
        android:id="@+id/spaceBetweenTextBoxes"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/storeName"
        app:layout_constraintRight_toLeftOf="@+id/selectedProductPriceInStore"
        app:layout_constraintTop_toTopOf="@+id/storeName" />

    <ImageView
        android:id="@+id/selectStoreToList"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/cart"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
